<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorDark">


    <EditText
        android:id="@+id/fullname"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:background="@drawable/rounded_text_edit"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Full Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#5e6266" />

    <EditText
        android:id="@+id/email"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fullname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_below="@id/fullname"
        android:layout_marginTop="159dp"
        android:background="@drawable/rounded_text_edit"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Email"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#5e6266" />

    <EditText
        android:id="@+id/password"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fullname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/rounded_text_edit"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Password"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#5e6266" />
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_round"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="24sp"
        />

     <Button
    android:id="@+id/login"
    android:layout_width="358dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/register"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:background="@color/colorDark"
    android:fontFamily="monospace"
    android:padding="10dp"
    android:text="ALready a member? Login here"
    android:textColor="@android:color/white"
    android:textAllCaps="false"
    android:textSize="18sp" />
</RelativeLayout>